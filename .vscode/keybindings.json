// Place your key bindings in this file to override the defaults
[
  // 新規ファイル作成
  { "key": "ctrl+n", "command": "explorer.newFile" },
  // 新規フォルダ作成
  { "key": "ctrl+shift+n", "command": "explorer.newFolder" },
  // エクスプローラにフォーカス
  { "key": "ctrl+e", "command": "workbench.view.explorer" },
  // エディタにフォーカスしてる時、ターミナルにフォーカス
  { "key": "ctrl+0", "command": "workbench.action.terminal.focus", "when": "editorTextFocus" },
  // ターミナルにフォーカスしてる時、エクスプローラにフォーカス
  { "key": "ctrl+0", "command": "workbench.view.explorer", "when": "terminalFocus" },
  // エクスプローラにフォーカスしてる時、エディタにフォーカス
  { "key": "ctrl+0", "command": "workbench.action.focusActiveEditorGroup", "when": "filesExplorerFocus" },
  // 開いている全てのエディタを閉じる
  { "key": "ctrl+shift+w", "command": "workbench.action.closeAllEditors"}
]